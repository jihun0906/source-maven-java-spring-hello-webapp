pipeline {
  agent none

  stages {
    stage('CheckOut') {
      agent any
      steps {
        git branch: 'main',
        url: 'https://github.com/jihun0906/source-maven-java-spring-hello-webapp.git'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package'
      }
    }
    stage('ImageBuild') {
      agent any
      steps {
        sh 'docker image build -t tomcat:hello .'
      }
    }
    stage('ImageTag') {
      agent any
      steps {
//        sh 'docker image tag tomcat:hello jihunjeon/tomcat:$BUILDNUMBER'
        sh 'docker image tag tomcat:hello jihunjeon/tomcat:latest'
      }
    }
    stage('ImagePush') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
//          sh 'docker image push jihunjeon/tomcat:$BUILDNUMBER'
          sh 'docker image push jihunjeon/tomcat:latest'
        }
      }
    }
    stage('Running Container') {
      agent {
        docker { image 'docker:dind' }
      }
      steps {
        ansiblePlaybook(playbook: 'playbook.yaml')
      }
    }
  }
}

