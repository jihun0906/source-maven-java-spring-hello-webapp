pipeline {
  agent none

  stages {
    stage('Checkout') {
      agent any
      steps {
        git branch: 'main', url: 'https://github.com/jihun0906/test-maven-java-spring-hello-webapp'
      }
    }
    stage('Build') {
      agent {
        docker { image 'maven:3-openjdk-17' }
      }
      steps {
        sh 'mvn clean package'
      }
    }
    stage('Build Image') {
      agent any
      steps {
        sh 'docker image build -t tomcat:hello-world .'
      }
    }
    stage('ImageTag') {
      agent any
      steps {
        sh 'docker image tag tomecat:hello-world test1234/tomecat:$BUILDNUMBER'
        sh 'docker image tag tomecat:hello-world test1234/tomcat:latest'
      }
    }
    stage('ImagePush') {
      agent any
      steps {
        withDockerRegistry(credentialsId: 'docker-hub-token', url: 'https://index.docker.io/v1/') {
          sh 'docker image push test1234/webapp:$BUILD_NUMBER'
          sh 'docker image push test1234/webapp:latest'
        }
      }
    }
    stage('Running Container') {
      agent {
        docker { image 'docker:dind' }
      }
      steps {
        sh 'docker -H tcp://192.168.56.103:2375 container run --d --name webapp -p 80:8080 test1234/tomcat:$BUILD_NUMBER'
      }
    }
  }
}

